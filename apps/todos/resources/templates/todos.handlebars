<h1>Todos</h1>

{{#view Todos.CreateTodoView}}
	<input id="new-todo" type="text" placeholder="What needs to be done?" />
{{/view}}

{{view Todos.StatsView id="stats"}}

{{view SC.Checkbox class="left mark-all-done"
		title="Mark All as Done"
		valueBinding="Todos.todoListController.allAreDone"}}
		
<div class="right tag-title">Tags
	{{#view SC.Button target="Todos.todoListController"
		action="sortByTags"}}Sort{{/view}}
	<span style="float:right">Add Tag</span>
</div>	
<br />
	
{{#collection SC.TemplateCollectionView contentBinding="Todos.todoListController"
										itemClassBinding="content.isDone"}}
  {{view Todos.MarkDoneView class="left" }}
  {{#view Todos.CreateTagView}}
	<p>&nbsp;{{tags}}<input style="position:relative; float:right;" class="new-todo" {{bindAttr name="title"}} type="text" /></p>
  {{/view}}
{{/collection}}
